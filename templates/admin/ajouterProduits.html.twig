<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Ajoutez un produit{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        <link rel="stylesheet" href="/assets/styles/app.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    </head>
    <body>
    <style>
        .rowForm {
            padding: 4px;
        }
        .rowFormLast {
            padding: 4px;
            margin-bottom: 30px;
        }
    </style>
    {% block body %}
    <div class='pageContainer'>
        <button type="button " class="btn btn-outline-success">
            <a class='btn-a text-decoration-none text-dark' href="{{ path('app_admin') }}">Dashboard</a>
        </button>
        <div class="mx-auto" style="width: 400px;">
            <h1 class="text-center h3 mt-5 mb-3 font-weight-normal">Ajoutez un produit</h1>

            {# Affichage des messages de succès #}
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}

            {# Affichage des messages d'erreur #}
            {% for message in app.flashes('error') %}
                <div class="alert alert-danger">
                    {{ message }}
                </div>
            {% endfor %}

            {# Affichage du formulaire avec les erreurs spécifiques à chaque champ #}
            <div class='Form'>
                {{ form_start(produitsForm) }}

                <div class='rowForm'>
                    {{ form_row(produitsForm.libelle) }}
                </div>

                <div class='rowForm'>
                    {{ form_row(produitsForm.prix) }}
                </div>

                <div class='rowForm'>
                    {{ form_row(produitsForm.quantite) }}
                </div>
                
                <div class='rowForm'>
                    {{ form_row(produitsForm.description) }}
                </div>
                
                {# <div class='rowFormLast'>
                    {{ form_row(produitsForm.laCategorie) }}
                </div> #}

                <button type="submit" class="btn btn-success w-100 mb-5">Ajouter</button>

                {{ form_end(produitsForm) }}
            </div>
        </div>
        {% endblock %}
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    </body>
</html>
