{% extends 'base.html.twig' %}

{% block body %}
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}DantecDrive{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    </head>
    <body>
        <div class="container">
        <h1>Chemin Optimal pour la Commande </h1>

        <div class="chemin-container">
            {% for produit in chemin %}
                <div class="chemin-item {% if loop.last %}last-item{% endif %}">
                    <span>Produit : {{ produit.libelle }}</span>
                    <span>Position : ({{ produit.x }}, {{ produit.y }})</span>
                </div>
            {% endfor %}
        </div>

        <div class="distance-total">
            Distance Totale : {{ distanceTotale }} unités
        </div>

        <a href="/admin/commande" class="btn-back">Retour à l'accueil</a>
    </body>

    <style scoped>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
            color: #333;
        }

        .container {
            width: 80%;
            margin: 2rem auto;
            background: #fff;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            padding: 1.5rem;
        }

        h1 {
            text-align: center;
            color: #ee0653;
            margin-bottom: 1.5rem;
        }

        .chemin-container {
            margin: 1.5rem 0;
        }

        .chemin-item {
            position: relative;
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #f9f9f9;
            padding: 0.8rem 1rem;
            border: 1px solid #ddd;
            border-radius: 5px;
            margin-bottom: 0.8rem;
            transition: transform 0.2s;
        }

        .chemin-item:not(:last-child)::after {
            content: '⬇︎'; /* Unicode pour une flèche vers le bas */
            position: absolute;
            right: -20px;
            top: 50%;
            transform: translateY(-50%);
            font-size: 1.2rem;
            color: #ee0653;
        }

        .chemin-item:last-child {
            background-color:rgb(255, 237, 237);
        }

        .chemin-item:hover {
            transform: translateY(-2px);
            background-color:rgb(255, 237, 237);
        }


        .distance-total {
            text-align: center;
            font-size: 1.2rem;
            color: #ee0653;
            font-weight: bold;
            margin-top: 2rem;
        }

        .btn-back {
            display: inline-block;
            margin: 2rem auto;
            text-align: center;
            text-decoration: none;
            color: #fff;
            background: #ee0653;
            padding: 0.8rem 1.5rem;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

        .btn-back:hover {
            background: #ee0653;
        }

        .last-item {
            font-weight: bold;
            background-color:rgb(255, 237, 237);
        }


    </style>
</html>
{% endblock %}